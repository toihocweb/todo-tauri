
{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "todo-app",
  "version": "0.1.0",
  "identifier": "com.nhatbui.todoapp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "My Todo App",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.supabase.co"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/toihocweb/todo-tauri/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IHJzaWduIGVuY3J5cHRlZCBzZWNyZXQga2V5ClJXUlRZMEl5aTkzZ1REdysveXlWaEFxM3pPSUo0aWMvWVdMQzRCQ3A3TURkcW5Oa2YxSUFBQkFBQUFBQUFBQUFBQUlBQUFBQW5wZmpuWElhOTlCUHFBeGNhcy90UWZuT05PZ1N5Vm0xRmNrVFpBN1J$"
    }
  }
}
